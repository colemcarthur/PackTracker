<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:PackTracker.MVVM.Models"
             xmlns:viewmodel="clr-namespace:PackTracker.MVVM.ViewModels"
             xmlns:converters="clr-namespace:PackTracker.Converters"
             x:DataType="viewmodel:ItemViewModel"
             x:Class="PackTracker.MVVM.Views.ItemsPage"
             Title="Package Items">

    <ContentPage.Resources>
        <converters:ImageSourceConverter x:Key="ImageSourceConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions=".9*, .1*">

        <CollectionView EmptyView="No Data"
                        x:Name="collectionView"
                        ItemsSource="{Binding Package.Items}"
                        Margin="10"
                        Grid.Row="0">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10"
                                    Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Item">
                    <SwipeView> 

                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                            BackgroundColor="LightPink"
                                            CommandParameter="{Binding .}"
                                            Invoked="DeleteSwipeItem_Invoked" >
                                </SwipeItem>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <VerticalStackLayout>
                            <Frame Padding="5">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                                            CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Grid ColumnDefinitions="*,*,*">
                                    <Image Source="{Binding Image, Converter={StaticResource ImageSourceConverter}}"
                                           Grid.Column="0"
                                           WidthRequest="135"
                                           HeightRequest="100"
                                           VerticalOptions="Center"/>
                                    <Label Text="{Binding Description}"
                                            Grid.Column="1"
                                           VerticalOptions="Center"
                                           FontSize="Large"
                                           BackgroundColor="Green"/>
                                    <Label Text="{Binding PurchasePrice}"
                                            Grid.Column="2"
                                           BackgroundColor="LightGray"
                                           VerticalOptions="Center"
                                           FontSize="Large"/>
                                </Grid>
                            </Frame>
                        </VerticalStackLayout>
                    </SwipeView>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Add item"
                Clicked="AddItemButton_Clicked"/>

    </Grid>
</ContentPage>
