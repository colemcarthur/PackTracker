<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PackTracker.MVVM.ViewModels"
             x:Class="PackTracker.MVVM.Views.CreatePackageView"
             Title="Create Package">
    <VerticalStackLayout>
        <Entry Placeholder="Package Name"
               Text="{Binding CurrentPackage.Name}"
               MaxLength="100"/>
        <Button Text="Save"
                Command="{Binding AddOrUpdateCommand}"/>

    </VerticalStackLayout>
</ContentPage>
