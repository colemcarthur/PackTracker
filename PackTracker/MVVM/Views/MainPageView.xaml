<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:PackTracker.MVVM.ViewModels"
             x:DataType="viewmodel:PackageViewModel"
             x:Class="PackTracker.MVVM.Views.MainPageView">

    <Grid
        RowDefinitions=".35*,.65*"
        BackgroundColor="White"
        RowSpacing="12"
        Padding="12">

        <Frame
            BackgroundColor="LightGrey"
            CornerRadius="12">
            <Grid
                ColumnDefinitions="*,.3*,*"
                RowDefinitions=".15*,.1*,.75*">

                <Label
                    Text="Package Collection Summary"
                    Grid.ColumnSpan="3"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontSize="20"/>

                <Label
                    Grid.Row="2"
                    Text="Packages"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"/>

                <Label
                    Grid.Row="3"
                    Text="{Binding Count}"
                    FontSize="30"
                    FontAutoScalingEnabled="True"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>

                <Rectangle
                    Grid.Row="2"
                    Grid.Column="1"
                    WidthRequest="2"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Black"
                    Margin="0,18,0,12"/>

                <Label
                    Grid.Column="3"
                    Grid.Row="2"
                    Text="Value"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"/>

                <Label
                    Grid.Column="3"
                    Grid.Row="3"
                    Text="{Binding TotalValue, StringFormat='{0:C}'}"
                    FontSize="30"
                    FontAutoScalingEnabled="True"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>


            </Grid>
        </Frame>

        <Frame
            Grid.Row="2"
            CornerRadius="12"
            BackgroundColor="LightGray">

            <Grid
                RowDefinitions="*,*"
                RowSpacing="12">
                <Button
                    Text="Scan A Package"
                    TextTransform="Uppercase"
                    BorderColor="Gray"
                    BorderWidth="2"
                    BackgroundColor="Transparent"
                    TextColor="Gray"
                    Clicked="ScanButton_Clicked"/>
                <Button
                    Text="Manage Packages"
                    TextTransform="Uppercase"
                    BorderColor="Gray"
                    BorderWidth="2"
                    BackgroundColor="Transparent"
                    TextColor="Gray"
                    Grid.Row="1"
                    Clicked="ManagePackagesButton_Clicked"/>

            </Grid>

        </Frame>

    </Grid>

</ContentPage>

