<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Name="tabbedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PackTracker.MVVM.Views"
    x:Class="PackTracker.MVVM.Views.AppContainer"
    Title="AppContainer"
    BarBackgroundColor="{StaticResource DarkGreen}"
    UnselectedTabColor="{StaticResource Green}"
    SelectedTabColor="{StaticResource LightGreen}">
    <NavigationPage Title="Package Manager">
        <x:Arguments>
            <views:MainPageView/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>
